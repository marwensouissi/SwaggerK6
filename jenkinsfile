pipeline {
    agent {
        label 'k6' // Ensures the pipeline runs on the K6 slave
    }

    environment {
        JSON_FILE = "$WORKSPACE/final/device_credentials.json"
    }

    stages {
        stage('Checkout Code') {
            steps {
                script {
                    echo "üîÑ Fetching code from Bitbucket..."
                    git branch: 'main',
                        credentialsId: 'bbck',
                        url: 'https://bitbucket.org/ndammak/itona-k6.git'
                }
            }
        }

        stage('Check JSON Before Test') {
            steps {
                script {
                    echo "üîç Checking device_credentials.json BEFORE test:"
                    sh "cat $JSON_FILE || echo '‚ö†Ô∏è File not found!'"
                }
            }
        }

        stage('Run K6 Test') {
            steps {
                script {
                    echo "üì° Running K6 Test..."
                    sh "docker run --rm -v $WORKSPACE/final:/app optimized-k6 run /app/final/Device_test.js"
                }
            }
        }

        stage('Check JSON After Test') {
            steps {
                script {
                    echo "üîç Checking device_credentials.json AFTER test:"
                    sh "cat $JSON_FILE || echo '‚ö†Ô∏è File not found!'"
                }
            }
        }

        stage('Clear JSON File') {
            steps {
                script {
                    echo "üßπ Clearing device_credentials.json..."
                    sh "echo '[]' > $JSON_FILE"
                }
            }
        }

        stage('Final Check JSON') {
            steps {
                script {
                    echo "üîç Checking device_credentials.json AFTER clearing:"
                    sh "cat $JSON_FILE || echo '‚ö†Ô∏è File not found!'"
                }
            }
        }
    }

    post {
        always {
            echo "‚úÖ Pipeline execution completed!"
        }
        success {
            echo "üéâ All K6 Tests Passed!"
        }
        failure {
            echo "‚ùå Some tests failed!"
        }
    }
}
