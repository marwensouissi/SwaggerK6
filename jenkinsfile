pipeline {
    agent { label 'k6' } 
    
    environment {
        BITBUCKET_REPO = "https://bitbucket.org/ndammak/itona-k6.git"
        BITBUCKET_CRED_ID = 'bbck'
        DOCKER_IMAGE = "optimized-k6"
    }

    stages {
        stage('Checkout Code') {
            steps {
                script {
                    echo "üîÑ Fetching code from Bitbucket..."
                    git branch: 'main',
                        credentialsId: BITBUCKET_CRED_ID,
                        url: BITBUCKET_REPO
                }
            }
        }

        // ‚úÖ NEW: Ensure `device_credentials.json` is empty BEFORE building Docker image
        stage('Clear Device Credentials') {
            steps {
                script {
                    echo "üóëÔ∏è Clearing device_credentials.json file before building Docker image..."
                    sh "echo -n '' > $WORKSPACE/final/device_credentials.json"
                    sh "ls -lah $WORKSPACE/final"  // Debugging - Verify file exists
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    echo "üê≥ Building Docker image for K6 tests..."
                    sh "docker build -t ${DOCKER_IMAGE} ."
                }
            }
        }

        stage('Run K6 Device Test') {
            steps {
                script {
                    echo "üì° Running K6 device_test.js scenario..."
                    sh "docker run --rm -v $WORKSPACE/final:/app/final ${DOCKER_IMAGE} run /app/final/Device_test.js"
                }
            }
        }

        // ‚úÖ NEW: Print `device_credentials.json` after K6 test to confirm it was written
        stage('Print Device Credentials') {
            steps {
                script {
                    echo "üìú Contents of device_credentials.json after K6 test:"
                    sh "cat $WORKSPACE/final/device_credentials.json"
                }
            }
        }

        stage('Fix JSON Output') {
            steps {
                script {
                    echo "üõ†Ô∏è Fixing JSON output with Node.js formatter..."
                    sh "ls -lah \$WORKSPACE/final"  // Debugging - Ensure JSON file exists

                    // Run JSON Formatter in Node.js
                    sh """
                        docker run --rm \
                        -v \$WORKSPACE/final:/app \
                        node:18-alpine \
                        node /app/JsonFormatter.js
                    """
                }
            }
        }

        stage('Run MQTT test') {
            steps {
                script {
                    echo "üì° Running K6 mqtt scenario..."
                    sh "docker run --rm -v $WORKSPACE/final:/app/final ${DOCKER_IMAGE} run /app/final/Mqtt_connection.js"
                }
            }
        }
    }

    post {
     
