pipeline {
    agent any

    environment {
        BITBUCKET_REPO = "https://bitbucket.org/ndammak/itona-k6.git"
        BITBUCKET_CRED_ID = 'bbck'
        K6_WEB_DASHBOARD = "true"
    }

    stages {
        stage('Checkout Code') {
            steps {
                script {
                    echo "ğŸ”„ Fetching code from Bitbucket..."
                    git branch: 'main',
                        credentialsId: BITBUCKET_CRED_ID,
                        url: BITBUCKET_REPO
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    sh '''
                    echo "ğŸ³ Building Docker image for K6 tests..."
                    docker build -t k6-tests .
                    '''
                }
            }
        }

        stage('Run K6 Tests in Docker') {
            steps {
                script {
                    sh '''
                    echo "ğŸ“¡ Running K6 tests inside Docker..."
                    docker run --rm k6-tests final/device_test.js
                    '''
                }
            }
        }

        stage('Fix JSON Output') {
            steps {
                script {
                    sh '''
                    echo "ğŸ› ï¸ Fixing JSON output with Node.js formatter..."
                    node JsonFormatter
                    '''
                }
            }
        }

        stage('Run MQTT Connection Test') {
            steps {
                script {
                    sh '''
                    echo "ğŸ”— Running MQTT connection test inside Docker..."
                    docker run --rm k6-tests final/Mqtt_connection.js
                    '''
                }
            }
        }
    }

    post {
        always {
            echo "âœ… Pipeline execution completed!"
        }
        success {
            echo "ğŸ‰ All K6 and MQTT Tests Passed!"
        }
        failure {
            echo "âŒ Some tests failed!"
        }
    }
}
