pipeline {
    agent { label 'k6' } 

    environment {
        BITBUCKET_REPO = "https://bitbucket.org/ndammak/itona-k6.git"
        BITBUCKET_CRED_ID = 'bbck'
        DOCKER_IMAGE = "optimized-k6"
        JSON_FILE_PATH = "$WORKSPACE/final/device_credentials.json"
    }

    stages {
        stage('Checkout Code') {
            steps {
                script {
                    echo "üîÑ Fetching code from Bitbucket..."
                    git branch: 'main',
                        credentialsId: BITBUCKET_CRED_ID,
                        url: BITBUCKET_REPO
                }
            }
        }

        stage('Prepare JSON File') {
            steps {
                script {
                    echo "üßπ Clearing device_credentials.json..."
                    sh "echo '[]' > ${JSON_FILE_PATH}"
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    echo "üê≥ Building Docker image for K6 tests..."
                    sh "docker build -t ${DOCKER_IMAGE} ."
                }
            }
        }

        stage('Run K6 Device Test') {
            steps {
                script {
                    echo "üì° Running K6 device_test.js scenario..."
                    sh """
                        docker run --rm \
                        -v $WORKSPACE/final:/app/final \
                        ${DOCKER_IMAGE} run /app/final/Device_test.js
                    """
                }
            }
        }

        stage('Check JSON File After Test') {
            steps {
                script {
                    echo "üìú Contents of device_credentials.json after K6 test:"
                    sh "cat ${JSON_FILE_PATH}"
                }
            }
        }

        stage('Fix JSON Output') {
            steps {
                script {
                    echo "üõ†Ô∏è Fixing JSON output with Node.js formatter..."
                    sh """
                        docker run --rm \
                        -v $WORKSPACE/final:/app \
                        node:18-alpine \
                        node /app/JsonFormatter.js
                    """
                }
            }
        }

        stage('Run MQTT Connection Test') {
            steps {
                script {
                    echo "üì° Running K6 mqtt scenario..."
                    sh """
                        docker run --rm \
                        -v $WORKSPACE/final:/app/final \
                        ${DOCKER_IMAGE} run /app/final/Mqtt_connection.js
                    """
                }
            }
        }
    }

    post {
        always {
            echo "‚úÖ Pipeline execution completed!"
        }
        success {
            echo "üéâ All K6 and MQTT Tests Passed!"
        }
        failure {
            echo "‚ùå Some tests failed!"
        }
    }
}
