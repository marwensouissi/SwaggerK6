pipeline {
    agent { label 'k6' } 
    
    environment {
        BITBUCKET_REPO = "https://bitbucket.org/ndammak/itona-k6.git"
        BITBUCKET_CRED_ID = 'bbck'
        DOCKER_IMAGE = "optimized-k6"
        CREDENTIALS_FILE = "$WORKSPACE/final/device_credentials.json"
        DURATION = "3m"
        VUS = "3"
        K6_WEB_DASHBOARD = "true"
        K6_DASHBOARD_DEVICE_PORT = "6565" // Port for Device Test Dashboard
        K6_DASHBOARD_MQTT_PORT = "6566"   // Port for MQTT Test Dashboard
    }

    stages {
        stage('Checkout Code') {
            steps {
                script {
                    echo "üîÑ Fetching code from Bitbucket..."
                    git branch: 'main',
                        credentialsId: BITBUCKET_CRED_ID,
                        url: BITBUCKET_REPO
                }
            }
        }

        stage('Clear Credentials File') {
            steps {
                script {
                    echo "üóë Clearing device_credentials.json..."
                    sh "echo '[]' > ${CREDENTIALS_FILE}"
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    echo "üê≥ Building Docker image for K6 tests..."
                    sh "docker build -t ${DOCKER_IMAGE} ."
                }
            }
        }

        stage('Run K6 Device Test with Dashboard') {
            steps {
                script {
                    echo "üì° Running K6 device_test.js with Web Dashboard on port ${K6_DASHBOARD_DEVICE_PORT}..."
                    
                    // ‚úÖ Start K6 Dashboard for Device Test
                    sh """
                        docker run --rm -d -p ${K6_DASHBOARD_DEVICE_PORT}:6565 -v $WORKSPACE/final:/app/final \
                        -e K6_WEB_DASHBOARD=true \
                        ${DOCKER_IMAGE} run --duration=${DURATION} --vus=${VUS} /app/final/Device_test.js
                    """

                    // ‚úÖ Wait for Dashboard & Open in Browser
                    sleep(5)
                    sh "xdg-open http://localhost:${K6_DASHBOARD_DEVICE_PORT} || open http://localhost:${K6_DASHBOARD_DEVICE_PORT} || start http://localhost:${K6_DASHBOARD_DEVICE_PORT}"
                }
            }
        }

        stage('Run K6 MQTT Test with Dashboard') {
            steps {
                script {
                    echo "üì° Running K6 mqtt scenario with Web Dashboard on port ${K6_DASHBOARD_MQTT_PORT}..."
                    
                    // ‚úÖ Start K6 Dashboard for MQTT Test
                    sh """
                        docker run --rm -d -p ${K6_DASHBOARD_MQTT_PORT}:6565 -v $WORKSPACE/final:/app/final \
                        -e K6_WEB_DASHBOARD=true \
                        ${DOCKER_IMAGE} run --duration=${DURATION} --vus=${VUS} /app/final/Mqtt_connection.js
                    """

                    // ‚úÖ Wait for Dashboard & Open in Browser
                    sleep(5)
                    sh "xdg-open http://localhost:${K6_DASHBOARD_MQTT_PORT} || open http://localhost:${K6_DASHBOARD_MQTT_PORT} || start http://localhost:${K6_DASHBOARD_MQTT_PORT}"
                }
            }
        }
    }

    post {
        always {
            echo "‚úÖ Pipeline execution completed!"
        }
        success {
            echo "üéâ All K6 and MQTT Tests Passed!"
        }
        failure {
            echo "‚ùå Some tests failed!"
        }
    }
}
