node('k6') {

    // âœ… Define environment variables manually (Scripted Pipelines don't support 'environment' block)
    def BITBUCKET_REPO = "https://bitbucket.org/ndammak/itona-k6.git"
    def BITBUCKET_CRED_ID = "bbck"
    def DOCKER_IMAGE = "optimized-k6"
    def CREDENTIALS_FILE = "$WORKSPACE/final/device_credentials.json"

    try {
        echo "ğŸ”„ Fetching code from Bitbucket..."
        
        checkout([
            $class: 'GitSCM',
            branches: [[name: 'main']],
            userRemoteConfigs: [[
                url: BITBUCKET_REPO,
                credentialsId: BITBUCKET_CRED_ID
            ]]
        ])

        echo "ğŸ” Debug: Repository Checkout Completed!"

        echo "ğŸ—‘ Clearing device_credentials.json..."
        sh "echo '[]' > ${CREDENTIALS_FILE}"
        echo "ğŸ” Debug: device_credentials.json Cleared!"

        echo "ğŸ³ Building Docker image for K6 tests..."
        sh "docker build -t ${DOCKER_IMAGE} ."
        echo "ğŸ” Debug: Docker Build Completed!"

        echo "ğŸ“¡ Running K6 device_test.js scenario..."
        sh """
            docker run --rm \
            -v $WORKSPACE/final:/app/final \
            ${DOCKER_IMAGE} run /app/final/Device_test.js
        """
        echo "ğŸ” Debug: K6 Device Test Completed!"

        echo "ğŸ“œ Contents of device_credentials.json after K6 test:"
        sh "cat ${CREDENTIALS_FILE}"

        echo "ğŸ› ï¸ Fixing JSON output with Node.js formatter..."
        sh """
            docker run --rm \
            -v \$WORKSPACE/final:/app \
            node:18-alpine \
            node /app/JsonFormatter.js
        """
        echo "ğŸ” Debug: JSON Fix Completed!"

        echo "ğŸ“¡ Running K6 mqtt scenario..."
        sh """
            docker run --rm \
            -v $WORKSPACE/final:/app/final \
            ${DOCKER_IMAGE} run /app/final/Mqtt_connection.js
        """
        echo "ğŸ” Debug: MQTT Test Completed!"

        echo "ğŸ‰ All K6 and MQTT Tests Passed!"
    } catch (Exception e) {
        echo "âŒ Some tests failed! Error: ${e.getMessage()}"
        currentBuild.result = 'FAILURE'
    } finally {
        echo "âœ… Pipeline execution completed!"
    }
}
